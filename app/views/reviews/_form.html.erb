<div class="container">

  <div class="container d-flex flex-row justify-content-between">
    <div class="activity-title">
        <div> <h2 class="title" data-content="Add a review" style="margin-bottom: 20px"> Add a review</h2></div>
    </div>
  </div>

  <div class="d-flex justify-content-center mb-3">
    <h3>What did you think about <%= @activity.name %>? </h3>
  </div>

  <div class="form-text d-flex flex-row justify-content-center">
    <%= simple_form_for [@activity, @review] do |f| %>
      <%= f.input :description, :as => :text, :input_html => {:rows => 5}, label: 'Review' %>
      <%= f.input :rating, collection: 1..5, label: 'Rating' %>
      <%= f.submit "Submit review", class: "btn btn-success" %>
    <% end %>
  </div>
</div>

