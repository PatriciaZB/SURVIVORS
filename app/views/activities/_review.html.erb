<div class="d-flex align-items-center">
  <div class="profile-image">
    <% if review.user.avatar.attached? %>
      <%= cl_image_tag(review.user.avatar.key, class: "avatar") %>
    <% else %>
      <%= image_tag("rebeca.png", class: "avatar") %>
    <% end %>
  </div>
  <div class="reviews-info">
    <div class="name-rating d-flex justify-content-between align-items-center">
      <h3 class="nickname"> <%= review.user.nickname %> </h3>
      <div class="reviews-rating mb-2 mr-1">
        <i class="fas fa-heart"></i>
        <strong>
          <span> <%= review[:rating] %> </span>
        </strong>
      </div>
    </div>
    <p style="margin-bottom: 0;">
      <strong>Posted on <%= review[:created_at].strftime('%A, %e %b %Y') %>
      </strong>
    </p>
  </div>
</div>
<div class="reviews-text mt-1 mb-2">
  <p> <%= review[:description] %> </p>
</div>
