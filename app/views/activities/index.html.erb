
<div class="container">
  <div class="row">
    <div class="col-7">
      <% @activities.each do |activity| %>
       <div class="card">
          <!-- <div class="card-body">
            <%= cl_image_tag activity.image.key, height: 300, width: 400, crop: :fill %>
           --></div>
          <div class="card-body">
            <h3 class="pl-2"> <%= activity.name.capitalize %></h3>
          </div>
            <div class="col-12">
              <p > <%= activity.description %> </p>
              <div class="card-body">
                <div class="col-6">
                  <p class="card-text"> <%= activity.address %> </p>
                </div>
                <div class="col-6">
                  <p class="card-text"> <%= activity.start_at %> </p>
                </div>
              </div>
            </div>
          <%= link_to "", activity_path(activity), class: 'card-link' %>
        </div>
      <% end %>
    </div>
    <p>Hello</p>
  </div>
</div>

