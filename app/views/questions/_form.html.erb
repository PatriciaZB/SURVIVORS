<div class="container">

  <div class="container d-flex flex-row justify-content-between mb-4 mt-4">
    <div class="activity-title">
        <div> <h1 class="black pl-4">Add a question</h1> </div>
        <div> <h1 class="white pl-4">Add a question</h1> </div>
        <div> <h1 class="white2 pl-4">Add a question</h1> </div>
      </div>
  </div>

  <div class="form-text d-flex flex-row justify-content-center">
    <div class="question-form" style="width: 50%">
      <%= simple_form_for [@question] do |f| %>
        <%= f.input :question, :as => :text, :input_html => {:rows => 10}, label: 'Question' %>
        <%= f.submit "Post", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
