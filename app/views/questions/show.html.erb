<div class="container">

  <div class="col-12 mb-3">
    <div class="activity-title">
      <div> <h1 class="black"> Question by <%= @question.user.nickname %></h1> </div>
      <div> <h1 class="white"> Question by <%= @question.user.nickname %></h1> </div>
      <div> <h1 class="white2"> Question by <%= @question.user.nickname %></h1> </div>
    </div>
  </div>

  <div class="reviews-container col-sm-12 col-md-4">
    <%= @question.question %>
  </div>

  <div class="reviews-container col-sm-12 col-md-4">
    <div class="reviews">
      <% @question.answers.each do |answer| %>
      <div class="d-flex align-items-center">
        <div class="profile-image">
          <%= image_tag("autumn-woman.png", :alt => "woman") %>
        </div>
        <div class="reviews-info">
          <h3 class="nickname"> <%= answer.user.nickname %> </h3>
          <p style="margin-bottom: 0;"><strong>Posted on <%= answer[:created_at].strftime('%A, %e %b %Y') %> </strong></p>
        </div>
      </div>
      <div class="reviews-text mt-2">
        <p> <%= answer[:answer] %> </p>
      </div>
      <% end %>
    </div>

  <div class="button mt-3">
    <%= link_to "Add an answer", new_question_answer_path(@question, Answer.new), method: :get, class: "btn btn-primary" %>
  </div>

  <div class="button mt-3">
    <%= link_to "Back to forum", questions_path, class: "btn btn-primary" %>
  </div>

</div>
