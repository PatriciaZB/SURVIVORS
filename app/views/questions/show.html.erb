<div class="container">

  <div class="col-12 mb-3">
    <div class="activity-title">
      <div> <h2 class="title" data-content="Forum">Forum</h2> </div>
    </div>
  </div>

  <div class="reviews-container col-12 col-sm-12">
    <h1> <%= @question.title %> </h1>
    <br>
    <p> <%= @question.question %> </p>
  </div>

  <div class="reviews-container col-sm-12 col-md-4">
    <div class="reviews">
      <% @question.answers.each do |answer| %>
      <div class="d-flex align-items-center">
        <div class="profile-image">
          <%= image_tag("autumn-woman.png", :alt => "woman") %>
        </div>
        <div class="reviews-info">
          <h3 class="nickname"> <%= answer.user.nickname %> </h3>
          <p style="margin-bottom: 0;"><strong>Posted on <%= answer[:created_at].strftime('%A, %e %b %Y') %> </strong></p>
        </div>
      </div>
      <div class="reviews-text mt-2">
        <p> <%= answer[:answer] %> </p>
      </div>
      <% end %>
    </div>

    <div class="form-text d-flex flex-row justify-content-center">
      <%= simple_form_for [@question, @answer], remote: true do |f| %>

        <%= f.input :answer, :as => :text, :input_html => {:rows => 15, class: "text-area"}, label: false, placeholder: "add an answer" %>
        <%= f.submit "Post", class: "btn btn-success post" %>

      <% end %>
    </div>

    <div class="button mt-3">
      <%= link_to "Back to forum", questions_path, class: "btn btn-primary" %>
    </div>

</div>
